<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootNewCita"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Toolbar personalizada -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarNewCita"
        android:layout_width="0dp"
        android:layout_height="112dp"
        android:background="@drawable/ic_arrow_back_24"
        app:title="Nueva Cita"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.Material3.Dark"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:navigationIconTint="@color/pink_500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- TODO: los campos de la cita irán aquí en criterios posteriores -->

</androidx.constraintlayout.widget.ConstraintLayout>
