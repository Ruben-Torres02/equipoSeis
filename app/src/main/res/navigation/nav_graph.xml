<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.equiposeis.view.fragment.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.equiposeis.view.fragment.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_home_to_newCita"
            app:destination="@id/newCitaFragment"/>
    </fragment>

    <fragment
        android:id="@+id/newCitaFragment"
        android:name="com.example.equiposeis.view.fragment.NewCitaFragment"
        android:label="Nueva Cita">
        <action
            android:id="@+id/action_newCita_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
    </fragment>

</navigation>
